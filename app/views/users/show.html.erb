<div class="py-4">
  <div class="d-flex flex-wrap justify-content-between align-items-center mb-4 gap-3">
    <div class="d-flex align-items-center gap-3">
      <%= user_avatar(@user, size: :xl) %>
      <div>
        <h1 class="h2 text-northwestern-purple mb-1"><%= @user.name %></h1>
        <p class="text-muted mb-0">Club member profile</p>
      </div>
    </div>
    <div class="d-flex gap-2 ms-auto">
      <% if @user == current_user %>
        <%= link_to "Edit My Profile", profile_path, class: "btn btn-outline-primary" %>
      <% end %>
      <%= link_to "Back to Clubs", clubs_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <div class="mb-3">
        <h2 class="h5 text-northwestern-purple">Major</h2>
        <p class="mb-0"><%= @user.major.presence || "Not provided" %></p>
      </div>

      <div class="mb-3">
        <h2 class="h5 text-northwestern-purple">Graduation Year</h2>
        <p class="mb-0"><%= @user.graduation_year.presence || "Not provided" %></p>
      </div>

      <div>
        <h2 class="h5 text-northwestern-purple">About</h2>
        <p class="mb-0"><%= @user.description.presence || "This member hasn't added a description yet." %></p>
      </div>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="h5 text-northwestern-purple mb-3">Clubs</h2>
      <% if @user.member_clubs.any? %>
        <div class="list-group list-group-flush">
          <% @user.member_clubs.order(:name).each do |club| %>
            <%= link_to club_path(club), class: "list-group-item list-group-item-action d-flex align-items-center gap-3 text-reset text-decoration-none" do %>
              <%= club_avatar(club, size: :sm) %>
              <span class="fw-semibold"><%= club.name %></span>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted mb-0">This member is not currently part of any clubs.</p>
      <% end %>
    </div>
  </div>
</div>
