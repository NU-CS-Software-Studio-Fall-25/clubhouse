<div class="py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h2 text-northwestern-purple mb-1"><%= @user.name %></h1>
      <p class="text-muted mb-0">Club member profile</p>
    </div>
    <div class="d-flex gap-2">
      <% if @user == current_user %>
        <%= link_to "Edit My Profile", profile_path, class: "btn btn-outline-primary" %>
      <% end %>
      <%= link_to "Back to Clubs", clubs_path, class: "btn btn-outline-secondary" %>
    </div>
  </div>

  <div class="card shadow-sm mb-4">
    <div class="card-body">
      <div class="mb-3">
        <h2 class="h5 text-northwestern-purple">Major</h2>
        <p class="mb-0"><%= @user.major.presence || "Not provided" %></p>
      </div>

      <div class="mb-3">
        <h2 class="h5 text-northwestern-purple">Graduation Year</h2>
        <p class="mb-0"><%= @user.graduation_year.presence || "Not provided" %></p>
      </div>

      <div>
        <h2 class="h5 text-northwestern-purple">About</h2>
        <p class="mb-0"><%= @user.description.presence || "This member hasn't added a description yet." %></p>
      </div>
    </div>
  </div>
</div>
