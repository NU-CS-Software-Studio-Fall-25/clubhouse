<div id="<%= dom_id club %>" class="card h-100 shadow-sm hover-shadow">
  <div class="card-header bg-primary bg-gradient text-white py-3">
    <h5 class="card-title mb-0 fw-bold">
      <i class="bi bi-bookmark-fill me-2"></i><%= club.name %>
    </h5>
  </div>
  <div class="card-body d-flex flex-column">
    <p class="card-text flex-grow-1 mb-4">
      <%= club.description.present? ? club.description : 
          content_tag(:em, "No description provided", class: "text-muted fst-italic") %>
    </p>
    
    <div class="mt-auto">
      <div class="d-flex gap-2">
        <%= link_to club, class: "btn btn-outline-primary" do %>
          <i class="bi bi-eye me-1"></i>View Details
        <% end %>
        <% if current_user&.owns?(club) %>
          <%= link_to edit_club_path(club), class: "btn btn-outline-secondary" do %>
            <i class="bi bi-pencil-fill me-1"></i>Edit
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
