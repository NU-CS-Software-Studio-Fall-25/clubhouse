<%= link_to club, class: "club-card-link text-decoration-none", id: dom_id(club) do %>
  <article class="card h-100 shadow-sm club-card">
    <div class="card-header bg-gradient text-white py-3">
      <div class="d-flex align-items-center gap-3">
        <%= club_avatar(club, size: :md) %>
        <h5 class="card-title mb-0 fw-bold flex-grow-1">
          <%= club.name %>
        </h5>
        <% if current_user&.owns?(club) && club.pending_memberships.any? %>
          <span class="badge bg-warning text-dark" title="<%= pluralize(club.pending_memberships.count, 'pending request') %>">
            <i class="bi bi-person-check me-1"></i>
            <%= club.pending_memberships.count %>
          </span>
        <% end %>
      </div>
    </div>
    <div class="card-body d-flex flex-column">
      <p class="card-text flex-grow-1 mb-4">
        <%= club.description.present? ? club.description : 
            content_tag(:em, "No description provided", class: "text-muted fst-italic") %>
      </p>
      
      <div class="mt-auto">
        <% if current_user&.owns?(club) %>
          <div class="d-flex gap-2" onclick="event.stopPropagation();">
            <%= link_to edit_club_path(club), class: "btn btn-outline-secondary btn-sm" do %>
              <i class="bi bi-pencil-fill me-1"></i>Edit
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </article>
<% end %>
